    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/deploycli.js"
        },
        {
          "type": "node",
          "request": "launch",
          "name": "diamond-new",
          "skipFiles": ["<node_internals>/**"],
          "program": "${workspaceFolder}/deploycli.js",
          "envFile": "${workspaceFolder}/.env.hh",
          "args": [
            "-u",
            "http://localhost:8545",
            "diamond-new" // , "--offline"
          ]
        },

        {
          "type": "node",
          "request": "launch",
          "name": "list selectors",
          "skipFiles": ["<node_internals>/**"],
          "program": "${workspaceFolder}/deploycli.js",
          "args": [
            "list",
            "-i",
            "${workspaceFolder:chaintrap-contracts}/build/forge/out",
            "-I", "facet",
            "-F", "json",
            "-n", "Diamond"
          ]
        },
    ]
}