{
  "name": "@polysensus/diamond-deploy",
  "type": "module",
  "version": "0.2.0",
  "description": "deployment library and tool for ERC 2535 diamond standard",
  "main": "dist/diamond-deploy.cjs",
  "module": "dist/diamond-deploy.esm.js",
  "browser": "dist/diamond-deploy.umd.js",
  "deploycli": "dist/deploycli.cjs",
  "bin": {
    "diamond-deploy": "./diamond-deploy.cjs"
  },
  "files": [
    "dist"
  ],
  "directories": {
    "lib": "src/lib"
  },
  "scripts": {
    "test": "vitest run",
    "test-watch": "vitest",
    "prepare": "rollup -c",
    "build": "rollup -c",
    "dev": "rollup -c -w",
    "lint": "prettier --ignore-path .gitignore --check --plugin-search-dir=. . && eslint --ignore-path .gitignore .",
    "format": "prettier --ignore-path .gitignore --write --plugin-search-dir=. ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/polysensus/diamond-deploy.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "keywords": [
    "solidity",
    "erc2535",
    "contracts"
  ],
  "author": "robin@polysensus.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/polysensus/diamond-deploy/issues"
  },
  "homepage": "https://github.com/polysensus/diamond-deploy#readme",
  "devDependencies": {
    "@babel/eslint-parser": "^7.19.1",
    "@babel/plugin-syntax-import-assertions": "^7.20.0",
    "@eth-optimism/sdk": "^2.0.2",
    "@rollup/plugin-commonjs": "^24.0.1",
    "@rollup/plugin-json": "^6.0.0",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@vitest/coverage-c8": "^0.28.5",
    "crypto-random": "^2.0.1",
    "dotenv": "^16.0.3",
    "eslint": "^8.34.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "prettier": "^2.8.4",
    "rollup-plugin-node-globals": "^1.4.0",
    "rollup-plugin-node-polyfills": "^0.2.1",
    "rollup-plugin-polyfill-node": "^0.12.0",
    "vitest": "^0.28.5"
  },
  "dependencies": {
    "commander": "^10.0.0",
    "ethers": "^5.7.2",
    "glob": "^8.1.0"
  },
  "eslintConfig": {
    "parser": "@babel/eslint-parser",
    "env": {
      "es2022": true
    },
    "parserOptions": {
      "requireConfigFile": false,
      "ecmaVersion": 2022,
      "sourceType": "module",
      "babelOptions": {
        "plugins": [
          "@babel/plugin-syntax-import-assertions"
        ]
      }
    }
  }
}
